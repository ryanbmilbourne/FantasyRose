<!-- views/admin.handlebars -->
<div class="panel panel-default">
    <div class="panel-heading"><h3 class="panel-title">Contestants</h3></div>
    <div class="panel-body">
        <div class="well">
            <input type="text" id="name" class="form-control" placeholder="Name">
            <br>
            <button type="button" class="btn btn-med btn-info">Add Contestant</button>
        </div>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Action</th>
                    <th>Name</th>
                    <th>Eliminated</th>
                    <th>Points</th>
                    <th>Image Name</th>
                </tr>
                </thead>
                <tbody>
                {{#each girls}}
                    <tr>
                        <td>
                            <button type="button" class="btn btn-sm btn-warning">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </button>
                            <button type="button" class="btn btn-sm btn-danger">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </button>
                        </td>
                        <td>{{value.name}}</td>
                        <td>{{value.eliminated}}</td>
                        <td>{{value.points}}</td>
                        <td>{{value.image}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading"><h3 class="panel-title">Events</h3></div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Action</th>
                    <th>Name</th>
                    <th>Point Value</th>
                    <th>Modifier Type</th>
                    <th>Mofifier Value</th>
                </tr>
                </thead>
                <tbody>
                {{#each events}}
                    <tr>
                        <td>
                            <button type="button" class="btn btn-sm btn-warning">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </button>
                            <button type="button" class="btn btn-sm btn-danger">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </button>
                        </td>
                        <td>{{path.key}}</td>
                        <td>{{value.value}}</td>
                        <td>{{value.modType}}</td>
                        <td>{{value.modValue}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
