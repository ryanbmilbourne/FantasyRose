<!-- views/admin.handlebars -->
<div class="panel panel-default">
    <div class="panel-heading"><h3 class="panel-title">Contestants</h3></div>
    <div class="panel-body">
            <a href="#" class="btn btn-md btn-success"
                data-toggle="modal"
                data-target="#addContestantModal">Click to Add</a>
            <div class="modal fade" id="addContestantModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </button>
                        <h4 class="modal-title" id="myModalLabel">Add Contestant</h4>
                        </div>
                        <div class="modal-body">
                            <h6>Girl look at that body</h6>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Action</th>
                    <th>Name</th>
                    <th>Eliminated</th>
                    <th>Points</th>
                    <th>Image Name</th>
                </tr>
                </thead>
                <tbody>
                {{#each girls}}
                    <tr>
                        <td>
                            <button type="button" class="btn btn-sm btn-default">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </button>
                            <button type="button" class="btn btn-sm btn-danger">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </button>
                        </td>
                        <td>{{value.name}}</td>
                        <td>{{value.eliminated}}</td>
                        <td>{{value.points}}</td>
                        <td>{{value.image}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading"><h3 class="panel-title">Events</h3></div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Action</th>
                    <th>Name</th>
                    <th>Point Value</th>
                    <th>Modifier Type</th>
                    <th>Mofifier Value</th>
                </tr>
                </thead>
                <tbody>
                {{#each events}}
                    <tr>
                        <td>
                            <button type="button" class="btn btn-sm btn-default">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </button>
                            <button type="button" class="btn btn-sm btn-danger">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </button>
                        </td>
                        <td>{{path.key}}</td>
                        <td>{{value.value}}</td>
                        <td>{{value.modType}}</td>
                        <td>{{value.modValue}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
